<script>
var editor;
$(document).ready(function() {
        editor = new $.fn.dataTable.Editor( {
        ajax: "",
        table: "#table",
        fields: [
            { label: '客户名称', name: 'name' },
            { label: '联系人',  name: 'connecter'  },
            { label: '联系人电话',  name: 'connecterPhone'  },
            { label: '省',  name: 'province'  },
            { label: '市',  name: 'city'  },
            { label: '区',  name: 'area'  },
            { label: '地址',  name: 'address'  }
        ]
    } );
    var table= $('#table').DataTable( {
        "processing": true,
        stateSave: true,
        "dom": '<"top"Brf>t<"bottom"ilp>',
        "ajax": '../api/json/customer',
        "columns": [
            {"data":null},
            { "data": "name" },
            { "data": "connecter" },
            { "data": "connectPhone" },
            { "data": "province" },
            { "data": "city" },
            { "data": "area" },
            { "data": "address" }
        ],
        select:true,
        buttons: [
    { extend: "create",text:"新增", editor: editor },
    { extend: "edit", text:"编辑",  editor: editor },
    { extend: "remove", text:"删除",editor: editor }
] ,
        "columnDefs": [{
            "searchable": false,
            "orderable": false,
            "targets": 0
        }],
        "order": [[1, 'asc']],
        "language": {
            "url": "../vendor/zh_CN.txt"
        }
    });
    table.on('order.dt search.dt',function() {
                table.column(0, {
                    search: 'applied',
                    order: 'applied'
                }).nodes().each(function(cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

        //new $.fn.dataTable.Buttons( table,);

    //table.buttons().container().appendTo( $('#table_wrapper'));
});
</script>
