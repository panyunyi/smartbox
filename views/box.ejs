<%include header%>
<div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">售货机</h1>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                售货机数据表
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <table id="table" class="ui celled table" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>序号</th>
                                            <th>售货机编号</th>
                                            <th>客户名称</th>
                                            <th>售货机型号</th>
                                            <th>售货机类型</th>
                                            <th>附属柜数量</th>
                                            <th>安装地址</th>
                                            <th>紧急联系人</th>
                                            <th>紧急联系人电话</th>
                                            <th>状态</th>
                                            <th>联机状态</th>
                                        </tr>
                                    </thead>
                                </table>
                            <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            售货机货道详细
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#passage" data-toggle="tab">货道设置</a>
                                </li>
                                <li><a href="#boxproduct" data-toggle="tab">售货机产品</a>
                                </li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="passage">
                                    <div class="panel-body1">
                                    <table id="table1" class="ui celled table" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>序号</th>
                                                <th>售货机编号</th>
                                                <th>货道编号</th>
                                                <th>货道类型</th>
                                                <th>货道容量</th>
                                                <th>产品编号</th>
                                                <th>产品名称</th>
                                                <th>销售类型</th>
                                                <th>状态</th>
                                                <th>行</th>
                                                <th>列</th>
                                            </tr>
                                        </thead>
                                    </table>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="boxproduct">
                                    <div class="panel-body1">
                                    <table id="table2" class="ui celled table" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th>序号</th>
                                                <th>售货机编号</th>
                                                <th>产品编号</th>
                                                <th>产品名称</th>
                                                <th>产品补货提示点</th>
                                                <th>产品库存警戒值</th>
                                                <th>备货天数</th>
                                                <th>总容量</th>
                                            </tr>
                                        </thead>
                                    </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="../vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="../vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="../vendor/metisMenu/metisMenu.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="../dist/js/sb-admin-2.js"></script>
    <script src="../dist/js/semantic.min.js"></script>
    <script src="../dist/js/jquery.dataTables.min.js"></script>
    <script src="../dist/js/dataTables.semanticui.min.js"></script>
    <script src="../dist/js/dataTables.buttons.min.js"></script>
    <script src="../dist/js/buttons.semanticui.min.js"></script>
    <script src="../dist/js/dataTables.select.min.js"></script>
    <script src="../dist/js/dataTables.editor.min.js"></script>
    <script src="../dist/js/editor.semanticui.min.js"></script>
    <script>
    var editor;
    var editor1;
    var editor2;
    $(document).ready(function() {
            editor = new $.fn.dataTable.Editor( {
            ajax: {
                create: {
                    type: 'POST',
                    url:  '../api/json/box/add'
                },
                edit: {
                    type: 'PUT',
                    url:  '../api/json/box/edit/_id_'
                },
                remove: {
                    type: 'DELETE',
                    url:  '../api/json/box/remove/_id_'
                }
            },
            table: "#table",
            fields: [
                { label: '售货机编号',  name: 'machine' },
                { label: '设备号',  name: 'deviceId' },
                { label: '客户',  name: 'cusId' ,type:'select' },
                { label: '售货机型号',  name: 'model' },
                { label: '售货机类型',  name: 'issend',type:'radio',options:[
                    { label: "格子柜",  value: 0 },
                    { label: "螺纹柜", value: 1},
                ], def: 1},
                { label: '附属数量',  name: 'child' },
                { label: '安装地址',  name: 'address' },
                { label: '紧急联系人',  name: 'connecter' },
                { label: '紧急联系人电话',  name: 'conPhone' },
                { label: '状态',  name: 'state' }
            ],i18n: {
                    create: {
                        button: "新增",
                        title:  "新建售货机",
                        submit: "创建"
                    },
                    edit: {
                        button: "编辑",
                        title:  "售货机信息修改",
                        submit: "更新"
                    },
                    remove: {
                        button: "删除",
                        title:  "删除",
                        submit: "删除",
                        confirm: {
                            _: "确定要删除 %d 条吗?",
                            1: "确定要删除这条售货机信息吗?"
                        }
                    }
                }
        } );
        var table= $('#table').DataTable( {
            "processing": true,
            stateSave: true,
           "ajax": '../api/json/box',
           "dom": '<"top"Brf>t<"bottom"ilp>',
           "columns": [
                {"data":null},
                { "data": "machine" },
                { "data": "cus" },
                { "data": "model" },
                { "data": "issend",render:function(data){return data?"螺纹柜":"格子柜"} },
                { "data": "child" },
                { "data": "address" },
                { "data": "connecter" },
                { "data": "conPhone" },
                { "data": "state" },
                { "data": "isLive",render:function(data){return data?"联机":"未联机"} }
            ],
            select:true,
            buttons: [
            { extend: "create", editor: editor },
            { extend: "edit",  editor: editor },
            { extend: "remove", editor: editor }
            ] ,
            "columnDefs": [{
                "searchable": false,
                "orderable": false,
                "targets": 0
            }],
            "order": [[1, 'asc']],
            "language": {
                "url": "../vendor/zh_CN.txt"
            }
        });
        $('#table tbody').on('click', 'tr', function () {
            var data = table.row( this ).data();
            table1.ajax.url('../api/json/passage/'+data.DT_RowId).load();
            table2.ajax.url('../api/json/boxProduct/'+data.DT_RowId).load();
        } );
        table.on('order.dt search.dt',function() {
                    table.column(0, {
                        search: 'applied',
                        order: 'applied'
                    }).nodes().each(function(cell, i) {
                        cell.innerHTML = i + 1;
                    });
                }).draw();
        editor1 = new $.fn.dataTable.Editor( {
            ajax: {
                create: {
                    type: 'POST',
                    url:  '../api/json/passage/add'
                },
                edit: {
                    type: 'PUT',
                    url:  '../api/json/passage/edit/_id_'
                },
                remove: {
                    type: 'DELETE',
                    url:  '../api/json/passage/remove/_id_'
                }
            },
            table: "#table1",
            fields: [
                { name: 'boxId', type:'select',label:'售货机' },
                { label: '货道编号',  name: 'seqNo' },
                { label: '附属柜',  name: 'childId',type :'select'},
                { label: '容量',  name: 'capacity' },
                { label: '产品',  name: 'productId',type :'select'},
                { label: '销售类型',  name: 'isSend',type:'radio',options:[
                    { label: "寄售",  value: 1 },
                    { label: "借还", value: 0},
                ], def: 1},
                { label: '状态',  name: 'state',type:'radio',options:[
                    { label: "可用",  value: 1 },
                    { label: "不可用", value: 0},
                ], def: 1}
            ],i18n: {
                    create: {
                        button: "新增",
                        title:  "新建货道",
                        submit: "创建"
                    },
                    edit: {
                        button: "编辑",
                        title:  "货道配置修改",
                        submit: "更新"
                    },
                    remove: {
                        button: "删除",
                        title:  "删除",
                        submit: "删除",
                        confirm: {
                            _: "确定要删除 %d 条吗?",
                            1: "确定要删除这条货道配置吗?"
                        }
                    }
                }
        } );
        var table1= $('#table1').DataTable( {
            "processing": true,
            stateSave: true,
           "ajax": '',
           "dom": '<"top"Brf>t<"bottom"ilp>',
           "columns": [
                {"data":null},
                { "data": "machine" },
                { "data": "seqNo"},
                { "data": "type" },
                { "data": "capacity" },
                { "data": "sku" },
                { "data": "product" },
                { "data": "isSend",render:function(data){return data?"寄售":"借还"}},
                { "data": "state",render:function(data){return data?"可用":"不可用"}},
                { "data": "row"},
                { "data": "col"}
            ],
            select:true,
            buttons: [
            { extend: "create", editor: editor1 },
            { extend: "edit",  editor: editor1 },
            { extend: "remove", editor: editor1 }
            ] ,
            "columnDefs": [{
            "render": function(data, type, row) {
                return row.child+data;
            },
            "targets": 2
            }],
            "order": [[1, 'asc']],
            "language": {
                "url": "../vendor/zh_CN.txt"
            }
        });
        table1.on('order.dt search.dt',function() {
                    table1.column(0, {
                        search: 'applied',
                        order: 'applied'
                    }).nodes().each(function(cell, i) {
                        cell.innerHTML = i + 1;
                    });
                }).draw();
        editor2 = new $.fn.dataTable.Editor( {
            ajax:{
                edit: {
                    type: 'PUT',
                    url:  '../api/json/boxProduct/edit/_id_'
                }
            },
            table: "#table2",
            fields: [
                { label: '补货提示点',  name: 'cue' },
                { label: '补货警戒值',  name: 'warning' },
                { label: '备货天数',  name: 'stockDays'}
            ]
        } );
        $('#table2').on( 'click', 'tbody td:not(:first-child)', function (e) {
           editor2.inline( this, {
               onBlur: 'submit'
           } );
       } );
        var table2= $('#table2').DataTable( {
            "processing": true,
            stateSave: true,
           "ajax": '',
           "dom": '<"top"rf>t<"bottom"ilp>',
           "columns": [
                {"data":null},
                { "data": "machine" },
                { "data": "sku"},
                { "data": "product" },
                { "data": "cue" },
                { "data": "warning" },
                { "data": "stockDays" },
                { "data": "capacity"}
            ],
            select: {
                style:    'os',
                selector: 'td:first-child'
            },
            buttons: [
                { extend: "create", editor: editor2 },
                { extend: "edit",   editor: editor2 },
                { extend: "remove", editor: editor2 }
            ],
            "columnDefs": [{
                "searchable": false,
                "orderable": false,
                "targets": 0
            }],
            "order": [[2, 'asc']],
            "language": {
                "url": "../vendor/zh_CN.txt"
            }
        });
        table2.on('order.dt search.dt',function() {
                    table2.column(0, {
                        search: 'applied',
                        order: 'applied'
                    }).nodes().each(function(cell, i) {
                        cell.innerHTML = i + 1;
                    });
                }).draw();
    });
    </script>
</body>

</html>
